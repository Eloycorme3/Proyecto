<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lista_favoritos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/pastelBackground">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerFavoritos"
        android:name="com.example.nimesukiapp.view.fragments.ListaAnimesFavoritosFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigationViewFavoritos" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationViewFavoritos"
        style="@style/NoRippleBottomNav"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>
